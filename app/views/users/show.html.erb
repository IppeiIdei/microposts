<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= "ID: " + @user.name %>
        <br>
        <br>
        <%= "Age: " + @user.age.to_s %>
      </h1>
    </section>
    <section class="user_follow">
      <h1>
        <%= link_to "Following", followings_user_path %>
        <br>
        <br>
        <%= link_to "Follower", followers_user_path %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
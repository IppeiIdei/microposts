<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <h3>Followings</h3>
      <ul class="users following">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>